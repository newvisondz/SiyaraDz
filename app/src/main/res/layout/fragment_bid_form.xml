<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".views.fragments.BidForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_mymodels"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                style="@style/MediumDarkBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Informations Personnelles" />

            <android.support.constraint.ConstraintLayout style="@style/FieldStyle">

                <ImageView
                    android:id="@+id/imageView0"
                    style="@style/IconStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_user" />

                <EditText
                    android:id="@+id/editText0"
                    style="@style/EditText"
                    android:hint="Nom Complet"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView0"
                    app:layout_constraintTop_toTopOf="@+id/imageView0" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout style="@style/FieldStyle">

                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/IconStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_calendar" />

                <EditText
                    android:id="@+id/editText1"
                    style="@style/EditText"
                    android:hint="Date de Naissance"
                    android:inputType="date"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView1"
                    app:layout_constraintTop_toTopOf="@+id/imageView1" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout style="@style/FieldStyle">

                <ImageView
                    android:id="@+id/imageView2"
                    style="@style/IconStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_home" />

                <EditText
                    android:id="@+id/editText2"
                    style="@style/EditText"
                    android:hint="Adresse"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                style="@style/FieldStyle"
                android:padding="0dp">

                <EditText
                    android:id="@+id/editText3"
                    style="@style/EditText"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Code Postal"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/view6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/spinner"
                    app:layout_constraintStart_toEndOf="@id/editText3"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editText3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view6"
                    app:layout_constraintTop_toTopOf="@+id/editText3" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout style="@style/FieldStyle">

                <ImageView
                    android:id="@+id/imageView4"
                    style="@style/IconStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_phone" />

                <EditText
                    android:id="@+id/editText4"
                    style="@style/EditText"
                    android:hint="Num. Tél."
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="@+id/imageView4" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout style="@style/FieldStyle">

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/IconStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_envelope" />

                <EditText
                    android:id="@+id/editText5"
                    style="@style/EditText"
                    android:hint="E-mail"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@+id/imageView5" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView2"
                style="@style/MediumDarkBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Montant Offert" />

            <android.support.constraint.ConstraintLayout style="@style/FieldStyle">

                <EditText
                    android:id="@+id/editText7"
                    style="@style/EditText"
                    android:layout_marginStart="60dp"
                    android:hint="Montant"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/MediumDarkBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="DZD"
                    app:layout_constraintBottom_toBottomOf="@+id/editText7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/editText7"
                    app:layout_constraintTop_toTopOf="@+id/editText7" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <CheckBox
                    android:id="@+id/checkBox"
                    style="@style/MediumDarkBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Je confirme avoir lu et accepté"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button4"
                    style="@style/TextButtonAccent"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:text="les conditions d'utilisation."
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="@+id/checkBox"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_mymodels"
        style="@style/ActionButton"
        android:text="VALIDER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
