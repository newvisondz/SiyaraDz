<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="versionCompare" type="com.newvisiondz.sayara.model.VersionCompare"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/spinner_v1"
                style="@style/SmallDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/spinner_v2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/option_name"
                app:layout_constraintTop_toTopOf="parent"
                app:setCompareVersionText="@{versionCompare}"
                tools:text="Nice" />

        <TextView
                android:id="@+id/spinner_v2"
                style="@style/SmallDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/spinner_v1"
                app:layout_constraintTop_toTopOf="parent"
                app:setCompareVersionText="@{versionCompare}"
                tools:text="Nice" />

        <TextView
                android:id="@+id/option_name"
                style="@style/SmallLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/spinner_v1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setCompareVersionText="@{versionCompare}"
                tools:text="Option" />
        <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:padding="3dp"
                android:background="@android:color/holo_orange_dark"
                app:layout_constraintTop_toBottomOf="@+id/spinner_v1" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>