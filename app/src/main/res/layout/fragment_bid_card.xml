<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="usedCar" type="com.newvisiondz.sayara.model.UsedCar"/>
    </data>
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/bid_card"
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true" android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

            <TextView
                    android:id="@+id/bid_model"
                    style="@style/MediumDarkBold"
                    app:setBidBrand="@{usedCar}"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Mercedes Classe C 220 AMG Line 2015"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/bid_owner"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:text="ZED AUTO"
                    app:setEngineGear="@{usedCar}"
                    style="@style/SmallDark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bid_model"/>

            <TextView
                    android:id="@+id/bidAdress"
                    style="@style/SmallDark"
                    android:layout_marginEnd="15dp"
                    android:text="Dar Beida"
                    app:layout_constraintBottom_toBottomOf="@+id/bid_owner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bid_owner"/>

            <ImageView
                    android:id="@+id/bid_image"
                    app:loadLocalImage="@{usedCar}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mercedes"
                    app:layout_constraintTop_toBottomOf="@+id/bid_owner"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bid_image">

                <TextView
                        android:id="@+id/bid_price"
                        style="@style/MediumDarkBold"
                        app:setBidPrice="@{usedCar}"
                        android:text="@string/bid_price_text"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageButton
                        android:id="@+id/expand_button"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="20dp"
                        android:background="@null"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        app:layout_constraintBottom_toBottomOf="@+id/bid_price"
                        app:layout_constraintDimensionRatio="h,1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/bid_price"
                        app:srcCompat="@drawable/ic_angle_down"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>