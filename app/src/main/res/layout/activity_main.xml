<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.newvisiondz.sayara.screens.entryScreens.MainActivity" android:id="@+id/linearLayout3">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:minHeight="40dp"
                android:background="@color/colorPrimaryDark"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <SearchView
                        android:id="@+id/action_search"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:showAsAction="ifRoom|collapseActionView"
                        android:title="Rechercher"
                        app:actionViewClass="android.support.v7.widget.SearchView"
                        android:searchIcon="@drawable/ic_filter_list_black_24dp"
                        android:layout_alignParentTop="true"

                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                >
                </SearchView>
                <TextView
                        android:text="Sayara DZ"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/textView5"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/leaguespartan_bold"
                        android:textColor="@android:color/black" android:textSize="21sp"
                        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1" android:textAlignment="center"
                        android:gravity="center_vertical"/>
                <ImageButton android:layout_width="wrap_content" android:layout_height="match_parent"
                             android:src="@drawable/ic_notifications_black_24dp"
                             android:id="@+id/imageButton"
                             android:background="@android:color/transparent"
                             android:layout_alignParentStart="true"
                             android:layout_alignParentTop="true"
                             android:layout_gravity="center_vertical" android:layout_marginStart="8dp"
                             android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                             android:layout_marginBottom="8dp" android:paddingRight="8dp"/>
            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

        <include
                layout="@layout/content_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    </LinearLayout>
</layout>