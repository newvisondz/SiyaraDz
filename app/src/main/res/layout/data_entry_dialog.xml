<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="match_parent" android:id="@+id/scrollView5">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:textColor="#212121"
                android:layout_height="wrap_content"
                android:text="Poster une annonce"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:id="@+id/textView18"
                android:fontFamily="@font/montserrat"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
        <Spinner
                android:id="@+id/brand_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="16dp"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                android:text="Choisir Une marque"
                android:entries="@array/cars_brands"
                app:layout_constraintTop_toBottomOf="@+id/brand_spinner_label"
                app:layout_constraintBottom_toTopOf="@+id/price_label" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <Spinner
                android:id="@+id/chassis_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                app:layout_constraintTop_toBottomOf="@+id/chassis_number_label"
                app:layout_constraintBottom_toTopOf="@+id/current_miles_label"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:entries="@array/gearboxtypes"
        />
        <Button
                android:id="@+id/color"
                android:layout_width="0dp"
                android:ellipsize="end"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                style="@style/btn_colors"
                android:text="Color"
                app:layout_constraintTop_toBottomOf="@+id/color_label"
                app:layout_constraintBottom_toTopOf="@+id/btnCancel" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <EditText
                android:id="@+id/current_miles"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Distance parcouru par l'automobile"
                android:inputType="numberDecimal"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                app:layout_constraintTop_toBottomOf="@+id/current_miles_label"
                app:layout_constraintBottom_toTopOf="@+id/brand_spinner_label" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <EditText
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Prix initial de l'automobile"
                android:inputType="numberDecimal"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                app:layout_constraintTop_toBottomOf="@+id/price_label"
                app:layout_constraintBottom_toTopOf="@+id/car_distance_label" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>


        <Button
                android:id="@+id/btnCancel"
                style="@style/btn_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/btnImg"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBaseline_toBaselineOf="@+id/btnImg"/>

        <Button
                android:textSize="16sp"
                android:id="@+id/btnImg"
                style="@style/btn_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Images"
                app:layout_constraintStart_toEndOf="@+id/btnCancel" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btnOk"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/color"/>

        <Button
                android:textSize="16sp"
                android:id="@+id/btnOk"
                style="@style/btn_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                app:layout_constraintStart_toEndOf="@+id/btnImg" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBaseline_toBaselineOf="@+id/btnImg"/>
        <TextView
                android:text="Boite de vitesse"
                android:labelFor="@id/chassis_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MediumLight"
                android:id="@+id/chassis_number_label"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:layout_constraintBottom_toTopOf="@+id/chassis_number"
                app:layout_constraintVertical_chainStyle="packed" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Distance parcouru par l'automobile"
                android:layout_width="wrap_content"
                style="@style/MediumLight"
                android:labelFor="@id/current_miles"
                android:layout_height="wrap_content"
                android:id="@+id/current_miles_label"
                app:layout_constraintTop_toBottomOf="@+id/chassis_number"
                app:layout_constraintBottom_toTopOf="@+id/current_miles" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="La marque de votre automobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brand_spinner_label"
                style="@style/MediumLight"
                android:labelFor="@id/brand_spinner"
                app:layout_constraintTop_toBottomOf="@+id/current_miles"
                app:layout_constraintBottom_toTopOf="@+id/brand_spinner" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Prix initial"
                android:labelFor="@id/price"
                style="@style/MediumLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_label"
                app:layout_constraintTop_toBottomOf="@+id/brand_spinner"
                app:layout_constraintBottom_toTopOf="@+id/price" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="La Couleur de votre automobile"
                android:layout_width="wrap_content"
                style="@style/MediumLight"
                android:labelFor="@id/color"
                android:layout_height="wrap_content"
                android:id="@+id/color_label"
                app:layout_constraintTop_toBottomOf="@+id/car_distance"
                app:layout_constraintBottom_toTopOf="@+id/color" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Date d'achat"
                android:layout_width="wrap_content"
                style="@style/MediumLight"
                android:layout_height="wrap_content"
                android:id="@+id/car_distance_label" app:layout_constraintTop_toBottomOf="@+id/price"
                app:layout_constraintBottom_toTopOf="@+id/car_distance" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textSize="20sp"
                android:id="@+id/car_distance"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:hint="Date de sortie"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                app:layout_constraintTop_toBottomOf="@+id/car_distance_label"
                app:layout_constraintBottom_toTopOf="@+id/color_label" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
