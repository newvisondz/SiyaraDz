<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="usedCar" type="com.newvisiondz.sayara.model.UsedCar"/>
    </data>
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/bid_card"
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true" android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff" >

            <TextView
                    android:id="@+id/bid_model"
                    style="@style/MediumDarkBold"
                    app:setBidBrand="@{usedCar}"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    tools:text="Mercedes "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:id="@+id/bid_owner"
                    app:setBidModel="@{usedCar}"
                    tools:text="ZED AUTO"
                    style="@style/SmallDark"
                    app:layout_constraintStart_toEndOf="@+id/bid_model"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@android:color/black"/>

            <ImageView
                    android:id="@+id/bid_image"
                    app:loadLocalImage="@{usedCar}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mercedes"
                    app:layout_constraintTop_toBottomOf="@+id/bid_owner"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/bid_price"
                    style="@style/MediumDarkBold"
                    app:setBidPrice="@{usedCar}"
                    android:text="@string/bid_price_text"

                    app:layout_constraintStart_toStartOf="@+id/bid_image" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/bid_image"
                    android:textColor="@android:color/black"/>
            <ImageButton
                    android:id="@+id/expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_assignment_black_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/bid_image" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/bid_image"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>