<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.newvisiondz.sayara.screens.usedcars.UsedCarsViewModel"/>
    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scrollView5">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Spinner
                    android:id="@+id/model_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:padding="16dp"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                    android:text="Choisir une marque"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/version_spinner"
                    app:layout_constraintTop_toBottomOf="@+id/brand_spinner_label"
                    app:layout_constraintBottom_toTopOf="@+id/current_miles_label"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/background_dark"
                    android:layout_height="wrap_content"
                    android:text="Poster une annonce"
                    android:id="@+id/textView18"
                    android:fontFamily="@font/over_the_rainbow"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:textSize="24sp" android:textStyle="bold"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btnCancel"/>
            <Spinner
                    android:id="@+id/brand_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/brand_label"
                    app:layout_constraintBottom_toTopOf="@+id/brand_spinner_label"/>
            <ImageButton
                    android:id="@+id/btnCancel"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:src="@drawable/ic_cancel_black_24dp"
                    android:background="@android:color/transparent"/>
            <Button
                    android:id="@+id/color"
                    android:layout_width="0dp"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    style="@style/btn_colors"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/color_label"
                    app:layout_constraintHorizontal_bias="0.5" android:backgroundTint="@color/brightorange"
                    android:text="Choisissez"/>
            <EditText
                    android:id="@+id/current_miles"
                    android:textSize="20sp"
                    app:setDouble="@={viewModel.newCarMiles}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Distance parcouru par l'automobile"
                    android:inputType="numberDecimal"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                    app:layout_constraintTop_toBottomOf="@+id/current_miles_label"
                    app:layout_constraintBottom_toTopOf="@+id/price_label" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
            <EditText
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    app:setDouble="@={viewModel.newCarPrice}"
                    android:hint="Prix initial de l'automobile"
                    android:inputType="numberDecimal"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                    app:layout_constraintTop_toBottomOf="@+id/price_label"
                    app:layout_constraintBottom_toTopOf="@+id/car_date_label" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>

            <Button
                    android:textSize="16sp"
                    android:id="@+id/btnImg"
                    style="@style/btn_colors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Inserer les photos"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/color"
                    android:backgroundTint="@color/brightorange"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnOk" android:layout_marginEnd="8dp"/>

            <Button
                    android:textSize="16sp"
                    android:id="@+id/btnOk"
                    style="@style/btn_colors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Terminer"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/color" android:backgroundTint="@color/brightorange"
                    app:layout_constraintStart_toEndOf="@+id/btnImg" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="Marque :"
                    android:labelFor="@id/model_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MediumLight"
                    android:id="@+id/brand_label"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView18"
                    app:layout_constraintBottom_toTopOf="@+id/brand_spinner" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Kilométrage en KM :"
                    android:layout_width="wrap_content"
                    style="@style/MediumLight"
                    android:labelFor="@id/current_miles"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_miles_label"
                    app:layout_constraintTop_toBottomOf="@+id/model_spinner"
                    app:layout_constraintBottom_toTopOf="@+id/current_miles"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Modèle :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand_spinner_label"
                    android:textAlignment="textStart"
                    style="@style/MediumLight"
                    android:labelFor="@id/model_spinner"
                    app:layout_constraintTop_toBottomOf="@+id/brand_spinner"
                    app:layout_constraintBottom_toTopOf="@+id/model_spinner"
                    app:layout_constraintEnd_toEndOf="@+id/model_spinner"
                    app:layout_constraintStart_toStartOf="@+id/model_spinner" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Prix initial en millions de centimes :"
                    android:labelFor="@id/price"
                    style="@style/MediumLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_label"
                    app:layout_constraintTop_toBottomOf="@+id/current_miles"
                    app:layout_constraintBottom_toTopOf="@+id/price" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Couleur :"
                    android:layout_width="wrap_content"
                    style="@style/MediumLight"
                    android:labelFor="@id/color"
                    android:layout_height="wrap_content"
                    android:id="@+id/color_label"
                    app:layout_constraintTop_toBottomOf="@+id/car_date"
                    app:layout_constraintBottom_toTopOf="@+id/color" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Année :"
                    android:layout_width="wrap_content"
                    style="@style/MediumLight"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_date_label"
                    app:layout_constraintTop_toBottomOf="@+id/price"
                    app:layout_constraintBottom_toTopOf="@+id/car_date" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/black"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:textSize="20sp"
                    android:id="@+id/car_date"
                    android:text="@={viewModel.newCarDate}"
                    android:hint="ex:2014-02-1"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                    app:layout_constraintTop_toBottomOf="@+id/car_date_label"
                    app:layout_constraintBottom_toTopOf="@+id/color_label" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                    android:ems="10"
                    android:id="@+id/version_spinner"
                    app:layout_constraintStart_toEndOf="@+id/model_spinner" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/brand_spinner_label" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/current_miles_label"/>
            <TextView
                    android:text="Version (finition) :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/version_label" style="@style/MediumLight"
                    app:layout_constraintStart_toStartOf="@+id/version_spinner"
                    app:layout_constraintEnd_toEndOf="@+id/version_spinner" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/brand_spinner"
                    android:textColor="@android:color/black"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
