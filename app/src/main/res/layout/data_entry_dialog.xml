<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poster une annonce"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:id="@+id/textView18"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:fontFamily="@font/montserrat"/>
        <Spinner
                android:id="@+id/model_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="16dp"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                android:text="Choisir Une marque"
                android:entries="@array/cars_brands"
                app:layout_constraintTop_toBottomOf="@+id/current_miles"
                app:layout_constraintBottom_toTopOf="@+id/price"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <EditText
                android:id="@+id/chassis_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Numéro de châssis"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:layout_constraintBottom_toTopOf="@+id/current_miles"
                app:layout_constraintVertical_chainStyle="packed" app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:id="@+id/color"
                android:layout_width="0dp"
                android:ellipsize="end"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                style="@style/btn_colors"
                android:text="Color"
                app:layout_constraintTop_toBottomOf="@+id/price"
                app:layout_constraintBottom_toTopOf="@+id/btnCancel" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
        />
        <EditText
                android:id="@+id/current_miles"
                android:textSize="22sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Distance parcouru par l'automobile"
                android:inputType="numberDecimal"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                app:layout_constraintTop_toBottomOf="@+id/chassis_number"
                app:layout_constraintBottom_toTopOf="@+id/model_spinner" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <EditText
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:hint="Prix initial de l'automobile"
                android:inputType="numberDecimal"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText.dialog_Input"
                app:layout_constraintTop_toBottomOf="@+id/model_spinner"
                app:layout_constraintBottom_toTopOf="@+id/color" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>


        <Button
                android:id="@+id/btnCancel"
                style="@style/btn_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/btnImg"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBaseline_toBaselineOf="@+id/btnImg"/>

        <Button
                android:textSize="16sp"
                android:id="@+id/btnImg"
                style="@style/btn_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take Image"
                app:layout_constraintStart_toEndOf="@+id/btnCancel"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnOk"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/color"/>

        <Button
                android:textSize="16sp"
                android:id="@+id/btnOk"
                style="@style/btn_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                app:layout_constraintStart_toEndOf="@+id/btnImg" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBaseline_toBaselineOf="@+id/btnImg"
                android:layout_marginEnd="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
