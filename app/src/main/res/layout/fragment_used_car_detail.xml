<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="usedCar" type="com.newvisiondz.sayara.model.UsedCar"/>
        <variable name="viewModel" type="com.newvisiondz.sayara.screens.usedcardetails.UsedCarDetailViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".screens.usedcardetails.UsedCarDetail">

        <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/total"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                        android:id="@+id/cardView">
                    <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/imageSlider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:sliderAutoCycleDirection="back_and_forth"
                            app:sliderAutoCycleEnabled="true"
                            app:sliderCircularHandlerEnabled="true"
                            app:sliderIndicatorGravity="center_horizontal|bottom"
                            app:sliderIndicatorMargin="15dp"
                            app:sliderIndicatorOrientation="horizontal"
                            app:sliderIndicatorPadding="3dp"
                            app:sliderScrollTimeInSec="5"
                            app:sliderIndicatorRadius="2dp"
                            app:sliderIndicatorSelectedColor="@color/colorAccent"
                            app:sliderIndicatorUnselectedColor="#FFF"
                            app:sliderStartAutoCycle="false"
                    />
                </androidx.cardview.widget.CardView>
                <TextView
                        android:text="@string/manufacturer"
                        android:layout_width="wrap_content"
                        style="@style/SmallDark"
                        app:setUsedCarManufacturer="@{usedCar}"
                        android:layout_height="wrap_content" android:id="@+id/used_car_manufacturer"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView"
                        app:layout_constraintBottom_toTopOf="@+id/used_car_model" android:layout_marginBottom="8dp"/>
                <TextView
                        android:text="@string/model"
                        style="@style/SmallDark"
                        app:setUsedCarModel="@{usedCar}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/used_car_model"
                        app:layout_constraintTop_toBottomOf="@+id/used_car_manufacturer"
                        app:layout_constraintBottom_toTopOf="@+id/used_car_version"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"/>
                <TextView
                        android:text="@string/color"
                        style="@style/SmallDark"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/used_car_color"
                        app:layout_constraintTop_toBottomOf="@+id/used_car_miles"
                        app:layout_constraintBottom_toTopOf="@+id/bids_car_list"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
                <TextView
                        android:text="@string/miles"
                        android:layout_width="wrap_content"
                        style="@style/SmallDark"
                        app:setUsedCarMiles="@{usedCar}"
                        android:layout_height="wrap_content" android:id="@+id/used_car_miles"
                        app:layout_constraintTop_toBottomOf="@+id/used_car_date"
                        app:layout_constraintBottom_toTopOf="@+id/used_car_color"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"/>
                <TextView
                        android:text="@string/registration_date"
                        style="@style/SmallDark"

                        app:setUsedCarDate="@{usedCar}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/used_car_date"
                        app:layout_constraintTop_toBottomOf="@+id/used_car_version"
                        app:layout_constraintBottom_toTopOf="@+id/used_car_miles"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"/>
                <TextView
                        android:text="@string/version"
                        android:layout_width="wrap_content"
                        style="@style/SmallDark"
                        app:setUsedCarVersion="@{usedCar}"
                        android:layout_height="wrap_content" android:id="@+id/used_car_version"
                        app:layout_constraintTop_toBottomOf="@+id/used_car_model"
                        app:layout_constraintBottom_toTopOf="@+id/used_car_date"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"/>

                <View
                        android:id="@+id/used_car_color_prv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:setBackgroundColor="@{usedCar}"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@+id/used_car_color" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/used_car_color"
                        app:layout_constraintBottom_toBottomOf="@+id/used_car_color"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        app:bidsListItems="@{viewModel.bidsList}"
                        android:layout_height="wrap_content"
                        tools:itemCount="3"
                        tools:listitem="@layout/bid_item"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/used_car_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:id="@+id/bids_car_list"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@+id/make_new_offere"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:id="@+id/textView16"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Prix Min."
                    style="@style/MediumDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    app:setDouble="@{usedCar.price}"
                    android:id="@+id/textView17"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    tools:text="2.600.000,00 DA"
                    style="@style/MediumDarkBold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
                android:id="@+id/make_new_offere"
                android:textSize="@dimen/font_large"
                android:fontFamily="@font/montserrat"
                android:text="Faire une Offre"
                style="@style/btn_colors"
                android:padding="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>