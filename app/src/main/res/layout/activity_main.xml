<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.newvisiondz.sayara.screens.entryScreens.MainActivity" android:id="@+id/linearLayout3">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:minHeight="40dp"
                android:background="@color/colorPrimaryDark">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <TextView
                        android:text="Sayara DZ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/leaguespartan_bold"
                        android:textColor="@android:color/black" android:textSize="21sp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                />


                <SearchView
                        android:id="@+id/action_search"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:showAsAction="ifRoom|collapseActionView"
                        android:title="Rechercher"
                        app:actionViewClass="android.support.v7.widget.SearchView"
                        android:searchIcon="@drawable/ic_filter_list_black_24dp"
                        android:layout_alignParentTop="true" android:layout_marginBottom="8dp"

                        app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent">
                </SearchView>
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:src="@drawable/ic_notifications_black_24dp"
                             android:id="@+id/imageButton"
                             android:background="@android:color/transparent" android:paddingRight="8dp"
                             android:layout_alignParentStart="true"
                             android:layout_alignParentTop="true"
                             android:layout_marginTop="16dp"
                             app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                             app:layout_constraintBottom_toTopOf="@+id/action_search"
                             android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <include
                layout="@layout/content_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    </LinearLayout>
</layout>