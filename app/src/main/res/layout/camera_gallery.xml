<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_camera"
            android:id="@+id/cameraButton"
            android:backgroundTint="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/galleryButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_image"
            android:id="@+id/galleryButton"
            android:backgroundTint="#fff"
            app:layout_constraintStart_toEndOf="@+id/cameraButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Prendre une photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MediumLight"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView20"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cameraButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp" android:textSize="14sp"
            android:textColor="@android:color/black" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Choisir depuis galerie"
            style="@style/MediumLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            app:layout_constraintStart_toEndOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/galleryButton" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:textSize="14sp" android:textColor="@android:color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>