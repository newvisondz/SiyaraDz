<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
	<data>
		<variable name="viewModel" type="com.newvisiondz.sayaradz.views.viewModel.SplashViewModel"/>
	</data>
	<androidx.constraintlayout.widget.ConstraintLayout
			android:background="#212121"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".views.SplashActivity">

		<ImageView
				android:layout_width="300dp"
				android:layout_height="200dp" app:srcCompat="@drawable/logo"
				android:id="@+id/imageView7"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toTopOf="@+id/checkNet" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
				android:layout_marginStart="8dp"/>
		<Button
				android:text="Get Started"
				android:onClick="@{()->viewModel.navigateToMainActivity()}"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/getStarted"
				style="@style/Widget.AppCompat.Button.Colored"
				app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/checkNet"
				app:layout_constraintEnd_toEndOf="@+id/checkNet"
				app:layout_constraintStart_toStartOf="@+id/checkNet"/>
		<TextView
				android:text="Try Again"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorAccent"
				android:textSize="@dimen/font_large"
				android:visibility="gone"
				android:id="@+id/checkNet"
				app:layout_constraintTop_toBottomOf="@+id/imageView7"
				app:layout_constraintBottom_toTopOf="@+id/getStarted"
				app:layout_constraintEnd_toEndOf="@+id/imageView7"
				app:layout_constraintStart_toStartOf="@+id/imageView7"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>